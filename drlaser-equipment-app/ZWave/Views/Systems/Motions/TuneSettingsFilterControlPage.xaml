                IsTitleWidthAutoResize="True"
                Keyboard="Numeric"
                LeftEntryEnabled="False"
                LeftText="2.00"
                RightText="2.00" />
        </VerticalStackLayout>
        <Button
            Margin="{StaticResource TuneSettingsFilterButtonPadding}"
            FontAttributes="Bold"
            HeightRequest="{StaticResource TuneSettingsFilterButtonHeight}"
            HorizontalOptions="End"
            IsEnabled="{Binding CriticalAction[Any], Converter={StaticResource InvertedBoolConverter}}"
            Style="{StaticResource LightButton}"
            Text="{Binding Localization[SetAll]}"
            WidthRequest="{StaticResource TuneSettingsFilterButtonWidth}" />
    </VerticalStackLayout>
</ContentView>
