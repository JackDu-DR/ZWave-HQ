                HeightRequest="{StaticResource EntryHeight}"
                IsTitleWidthAutoResize="True"
                Keyboard="Numeric"
                LeftEntryEnabled="False"
                LeftText="2.00"
                RightText="2.00" />
            <controls:EntryWithTitle
                Title="{Binding Localization[SetsNumeratorFrequency]}"
                EntryContainerWidthRequest="{StaticResource TuneSettingsFilterEntryWithTitleControlWidth}"
                HeightRequest="{StaticResource EntryHeight}"
                IsTitleWidthAutoResize="True"
                Keyboard="Numeric"
                LeftEntryEnabled="False"
                LeftText="2.00"
                RightText="2.00" />
        </VerticalStackLayout>
        <VerticalStackLayout Spacing="{StaticResource SmallSpacing}">
            <Label
                FontAttributes="Bold"
