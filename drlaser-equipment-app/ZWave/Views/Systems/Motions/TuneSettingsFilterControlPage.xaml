                IsTitleWidthAutoResize="True"
                Keyboard="Numeric"
                LeftEntryEnabled="False"
                LeftText="2.00"
                RightText="2.00" />
            <controls:EntryWithTitle
                Title="{Binding Localization[SetsDampingDenominator]}"
                EntryContainerWidthRequest="{StaticResource TuneSettingsFilterEntryWithTitleControlWidth}"
                HeightRequest="{StaticResource EntryHeight}"
                IsTitleWidthAutoResize="True"
                Keyboard="Numeric"
                LeftEntryEnabled="False"
                LeftText="2.00"
                RightText="2.00" />
            <controls:EntryWithTitle
