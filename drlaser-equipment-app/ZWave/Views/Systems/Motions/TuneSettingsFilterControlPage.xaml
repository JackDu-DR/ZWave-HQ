                LeftText="2.00"
                RightText="2.00" />
            <controls:EntryWithTitle
                Title="{Binding Localization[SetsDampingNumerator]}"
                EntryContainerWidthRequest="{StaticResource TuneSettingsFilterEntryWithTitleControlWidth}"
