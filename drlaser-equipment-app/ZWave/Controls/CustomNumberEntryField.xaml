<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ZWave.Controls"
             x:Class="ZWave.Controls.CustomNumberEntryField">
    <StackLayout x:Name="EntryContainer" Orientation="Horizontal" Spacing="2">
        <Border
            Stroke="#CCE1E1E1"
            StrokeThickness="1">
            <Border.StrokeShape>
                <RoundRectangle
                    CornerRadius="4,4,4,4" />
            </Border.StrokeShape>
            <Entry
                x:Name="EntryValue"
                BackgroundColor="White"
                IsEnabled="True"
                TextChanged="OnEntryValueChanged"
                />
        </Border>
    </StackLayout>
</ContentView>
