<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ZWave.Controls.StatusLabel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout Margin="0">
        <Label
            x:Name="TitleLabel"
            FontSize="{StaticResource Body2FontSize}"
            HorizontalOptions="Start"
            VerticalOptions="Center" />
        <Border
            x:Name="Border"
            Margin="{StaticResource StatusLabelMargin}"
            Padding="{StaticResource StatusLabelPadding}"
            HeightRequest="{StaticResource StatusLabelHeight}"
            StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="4" />
            </Border.StrokeShape>
            <Label
                x:Name="StatusTextLabel"
                Margin="0"
                FontAttributes="Bold"
                FontFamily="{StaticResource OpenSansSemibold}"
                FontSize="{StaticResource Body2FontSize}"
                HorizontalOptions="Center"
                TextColor="{StaticResource White}"
                VerticalOptions="Center" />
        </Border>
    </VerticalStackLayout>
</ContentView>
