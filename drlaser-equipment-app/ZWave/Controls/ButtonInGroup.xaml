<?xml version="1.0" encoding="utf-8" ?>
<VerticalStackLayout
    x:Class="ZWave.Controls.ButtonInGroup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ZWave.Controls"
    Padding="0">
    <controls:CustomButton x:Name="Button" BorderColor="Transparent" />
    <BoxView
        x:Name="SelectedButtonUnderline"
        Margin="0,-2,0,0"
        HeightRequest="{StaticResource ButtonInGroupUnderlineHeight}"
        WidthRequest="{StaticResource ButtonInGroupUnderlineWidth}"
        Color="{StaticResource BlueBrand5}" />
</VerticalStackLayout>
