<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZWave.Controls.ArrowWithNumber">
    
    <Grid x:Name="ArrowStyleGrid">
        <Label x:Name="ArrowNumber" FontAttributes="Bold" VerticalTextAlignment="Center" Margin="5,0,5,0"/>

        <Image x:Name="ArrowIcon">
            <Image.Source>
                <FontImageSource FontFamily="CustomFontIcons" Glyph="&#xE800;" Color="Black" />
            </Image.Source>
        </Image>
    </Grid>
</ContentView>
